# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "disk /"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "📶%quality at %essid"
        format_down = "📶 down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

cpu_temperature 0 {
		format = "🔥 %degrees°C"
		max_threshold = 60
		format_above_threshold = "High T: %degrees °C"
}

battery all {
		# ⚡ 🔋 ? ☻
		last_full_capacity = true
		status_chr = "⚡"
		status_bat = "🔋"
		status_unk = "? UNK"
		status_full = "☻"
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "💾 %avail"
}

load {
        format = "%1min"
}

memory {
		# placeholders: total, used, free, available, shared
        format = "💾 %available"
        threshold_degraded = "5G"
        threshold_critical = "2G"
        format_degraded = "💾 AVAILABE MEMORY < %available"
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "🗓️ %a, %d/%m/%Y %T"
}
